/* 上拉菜单 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  /* opacity: 0.2; */
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 70vh;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 30rpx;
  padding-left: 30rpx;
}
.pop_head {
  display: flex;
}
.pop_avatar {
  width: 200rpx;
  height: 200rpx;
}
.pop_price {
  box-sizing: border-box;
  padding-top: 70rpx;
  font-size: 28rpx;
  color: #DF443B;
  font-weight: bold;
  padding-left: 20rpx;
}
.pop_big_Red {
  font-size: 32rpx;
}
.pop_options {
  padding-bottom: 30rpx;
  border-bottom: 1px solid #ddd;
}
.type,
.num_text,
.minimum {
  font-size: 32rpx;
  color: #989A9B;
  padding-top: 50rpx;
  padding-left: 30rpx;
  padding-bottom: 30rpx;
}
.minimum {
  color: #000;
}
.option {
  /* width: 50%; */
  margin: 12rpx 20rpx;
  height: 60rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  line-height: 60rpx;
  color: #000;
  font-weight: normal;
  background-color: #F6F6F6;
  /* 设置一个相同宽度的边框使切换按钮时不会出现按钮大小跳动 */
  border: 1px solid #F6F6F6;
  display: inline-block;
  text-align: center;
  border-radius: 50rpx;
  font-size: 30rpx;
}
/* 选择条件按钮被选中后 */
.option.seleted {
  color: #DE554F;
  background-color: #FCF4F3;
  border: 1px solid #DE554F;
}
.num_select {
  display: flex;
}
.selector {
  padding-left: 20rpx;
  padding-top: 30rpx;
}
.bottom {
  width: 750rpx;
  height: 110rpx;
  font-size: 32rpx;
  padding-top: 55rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
}
.animation-reset {
  width: 50%;
  height: 100%;
  line-height: 50%;
  color: #fff;
  text-align: center;
  padding-top: 55rpx;
  background-color: #F2AE3C;
}
.animation-button {
  width: 50%;
  height: 100%;
  line-height: 50%;
  color: #fff;
  text-align: center;
  background-color: #DF3F24;
  padding-top: 55rpx;
}
page {
  background-color: #efeff4;
}
page .swipper_header .swipper {
  width: 100%;
  height: 40vh;
}
page .swipper_header .swipper .swiper_item image {
  width: 100%;
  height: 100%;
}
page .title {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  position: relative;
  padding-bottom: 30rpx;
}
page .title .jd_goodsTitle {
  display: flex;
  justify-content: space-between;
  padding-top: 16rpx;
}
page .title .jd_goodsTitle .jd_goodsPrice {
  color: #c20a0a;
  font-size: 36rpx;
  font-weight: 600;
}
page .title .jd_goodsTitle .jd_goodsPrice .pricebefore {
  font-size: 40rpx;
}
page .title .jd_goodsTitle .jd_goodsShare .share_image {
  width: 35rpx;
  height: 35rpx;
  display: block;
}
page .title .jd_goodsTitle .jd_goodsShare .share_btn {
  background-color: #fff;
  font-size: 20rpx;
  padding-left: 0;
  padding-right: 0;
}
page .title .jd_goodsTitle .jd_goodsShare .share_btn::after {
  content: none;
  border: none;
}
page .title .title_bd .self_sell {
  display: inline;
  background-color: #ec3939;
  color: #fff;
  font-size: 26rpx;
  padding: 2rpx 4rpx;
  margin-right: 10rpx;
  box-sizing: border-box;
}
page .all {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 30rpx;
}
page .l_text {
  color: #989a9b;
  font-size: 32rpx;
  padding-right: 25rpx;
  min-width: 60rpx;
}
page .discount_box {
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  position: relative;
  background-color: #fff;
  display: flex;
}
page .discount_box .discount {
  background-color: #ec3939;
  color: #fff;
  font-size: 26rpx;
}
page .discount_box .discount_wrapper {
  display: flex;
}
page .card_wrapper {
  padding-left: 30rpx;
  background-color: #fff;
}
page .card_wrapper .discount_card {
  width: 230rpx;
  height: 120rpx;
  padding-right: 20rpx;
}
page .promote_box {
  border-top: 1px solid #ddd;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-bottom: 10rpx;
  margin-bottom: 30rpx;
  position: relative;
  display: flex;
  font-size: 32rpx;
  border-bottom: 1px solid #ddd;
}
page .promote_box .right_wrapper {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}
page .promote_box .right_wrapper .enjoy {
  display: inline-block;
  padding-bottom: 30rpx;
}
page .promote_box .right_wrapper .tab_wrapper {
  box-sizing: border-box;
  display: flex;
  margin-bottom: 20rpx;
  /* 促销卡片没展示出来时 */
}
page .promote_box .right_wrapper .tab_wrapper .tabs {
  max-height: 30rpx;
  display: inline;
  font-size: 20rpx;
  color: #df443b;
  padding: 5rpx;
  margin-right: 10rpx;
  border: 1px solid #df443b;
}
page .promote_box .right_wrapper .tab_wrapper .describe {
  max-width: 400rpx;
  /* 超出两行打点 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
page .promote_box .right_wrapper .tab_wrapper .text_show {
  max-width: 400rpx;
}
page .choose_box {
  position: relative;
  padding: 30rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  display: flex;
}
page .choose_box .choose_wrapper {
  display: flex;
}
page .choose_box .choose_wrapper .choose_value {
  margin-right: 12rpx;
}
page .choose_box .choose_wrapper .more {
  position: absolute;
  right: 30rpx;
  width: 34rpx;
  height: 34rpx;
}
page .send_box {
  width: 750rpx;
  position: relative;
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-bottom: 30rpx;
  border-top: 1px solid #ddd;
  background-color: #fff;
  display: flex;
}
page .send_box .right_wrapper {
  display: flex;
  font-size: 32rpx;
  flex-direction: column;
}
page .send_box .right_wrapper .address_wrapper {
  display: flex;
}
page .send_box .right_wrapper .address_wrapper .mark {
  width: 55rpx;
  height: 55rpx;
  margin-top: -5rpx;
}
page .send_box .right_wrapper .hint {
  color: #989a9b;
  max-width: 630rpx;
}
page .weight_box {
  position: relative;
  padding-left: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
  font-size: 32rpx;
}
page .options {
  padding: 20rpx 50rpx 20rpx 30rpx;
  font-size: 28rpx;
  color: #989a9b;
  line-height: 2;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #ddd;
  display: flex;
  flex-wrap: wrap;
}
page .options icon {
  padding-right: 15rpx;
}
page .options text {
  padding-right: 20rpx;
}
page .detail {
  margin-bottom: 100rpx;
}
page .detail .imageList {
  width: 100%;
  background-color: #fff;
}
page .detail .imageList image {
  width: 100%;
  margin-bottom: 10rpx;
}
page .detail .imageList image:last-child {
  margin-bottom: 0;
}
page .modal_shadow {
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  z-index: 999;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
}
page .goTop {
  position: fixed;
  bottom: 200rpx;
  right: 20rpx;
  width: 65rpx;
  height: 65rpx;
  border: 1px solid #dddddd;
  border-radius: 50%;
  background-color: #fff;
  text-align: center;
}
page .goTop .icon_goTop {
  width: 40rpx;
  height: 40rpx;
  padding-top: 12rpx;
  padding-left: 2rpx;
}
page .goodsaction {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  display: flex;
  background-color: #fff;
  padding-left: 30rpx;
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
}
page .goodsaction .contact_wrapper {
  width: 134rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
page .goodsaction .contact_wrapper .seller {
  padding-left: 10rpx;
}
page .goodsaction .contact_wrapper .text {
  font-size: 20rpx;
  width: 100%;
}
page .goodsaction .cart_wrapper {
  width: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
page .goodsaction .cart_wrapper .cart {
  padding-left: 5rpx;
}
page .goodsaction .cart_wrapper .text {
  font-size: 20rpx;
}
page .goodsaction .cart_wrapper .around {
  font-size: 20rpx;
  position: absolute;
  top: 10rpx;
  right: 40rpx;
  z-index: 99;
  background-color: #fff;
  height: 25rpx;
  width: 25rpx;
  text-align: center;
  line-height: 25rpx;
  color: #df443b;
  border: 1px solid #df443b;
  border-radius: 100%;
}
page .goodsaction .btn_wrapper {
  display: flex;
  width: 100%;
}
page .goodsaction .btn_wrapper .btn {
  width: 50%;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
page .goodsaction .btn_wrapper .add_cart {
  background-color: #f2ae3c;
}
page .goodsaction .btn_wrapper .buy {
  background-color: #df3f24;
}
page .seller,
page .cart {
  width: 40rpx;
  height: 40rpx;
  /* background-color: #000; */
}
