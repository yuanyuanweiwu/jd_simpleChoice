page {
  background-color: #efeff4;
}
page .swipper_header .swipper {
  width: 100%;
  height: 40vh;
}
page .swipper_header .swipper .swiper_item image {
  width: 100%;
  height: 100%;
}
page .title {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  position: relative;
  padding-bottom: 30rpx;
}
page .title .jd_goodsTitle {
  display: flex;
  justify-content: space-between;
  padding-top: 16rpx;
}
page .title .jd_goodsTitle .jd_goodsPrice {
  color: #c20a0a;
  font-size: 36rpx;
  font-weight: 600;
}
page .title .jd_goodsTitle .jd_goodsPrice .pricebefore {
  font-size: 40rpx;
}
page .title .jd_goodsTitle .jd_goodsShare .share_image {
  width: 35rpx;
  height: 35rpx;
  display: block;
}
page .title .jd_goodsTitle .jd_goodsShare .share_btn {
  background-color: #fff;
  font-size: 20rpx;
  padding-left: 0;
  padding-right: 0;
}
page .title .jd_goodsTitle .jd_goodsShare .share_btn::after {
  content: none;
  border: none;
}
page .title .title_bd .self_sell {
  display: inline;
  background-color: #ec3939;
  color: #fff;
  font-size: 26rpx;
  padding: 2rpx 4rpx;
  margin-right: 10rpx;
  box-sizing: border-box;
}
page .all {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 30rpx;
}
page .l_text {
  color: #989a9b;
  font-size: 32rpx;
  padding-right: 25rpx;
  min-width: 60rpx;
}
page .discount_box {
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  position: relative;
  background-color: #fff;
  display: flex;
}
page .discount_box .discount {
  background-color: #ec3939;
  color: #fff;
  font-size: 26rpx;
}
page .discount_box .discount_wrapper {
  display: flex;
}
page .card_wrapper {
  padding-left: 30rpx;
  background-color: #fff;
}
page .card_wrapper .discount_card {
  width: 230rpx;
  height: 120rpx;
  padding-right: 20rpx;
}
page .promote_box {
  border-top: 1px solid #ddd;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-bottom: 10rpx;
  margin-bottom: 30rpx;
  position: relative;
  display: flex;
  font-size: 32rpx;
  border-bottom: 1px solid #ddd;
}
page .promote_box .right_wrapper {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}
page .promote_box .right_wrapper .enjoy {
  display: inline-block;
  padding-bottom: 30rpx;
}
page .promote_box .right_wrapper .tab_wrapper {
  box-sizing: border-box;
  display: flex;
  margin-bottom: 20rpx;
  /* 促销卡片没展示出来时 */
}
page .promote_box .right_wrapper .tab_wrapper .tabs {
  max-height: 30rpx;
  display: inline;
  font-size: 20rpx;
  color: #df443b;
  padding: 5rpx;
  margin-right: 10rpx;
  border: 1px solid #df443b;
}
page .promote_box .right_wrapper .tab_wrapper .describe {
  max-width: 400rpx;
  /* 超出两行打点 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
page .promote_box .right_wrapper .tab_wrapper .text_show {
  max-width: 400rpx;
}
